<div class="bg-white">
  <br> 
  <div class="container">  
    <h2 class="amatic text-center">ClaCom</h2>

    <div class="profile-wrap">
      <%= form_with model: @post, local:true do |form| %>
          <div class="form-group">
            <%= form.label :曲名 %>　<br />
            <%= form.text_field :title, class: "form-control"  %>
          </div>
          <br>
            <div class="form-group">
              <%= form.label :作曲家 %><%= link_to '作曲家を追加する', new_composer_path %><br />
              <div class="card-group">
                <% @composers.each do |obj| %>
                  <div class="col-12 col-lg-3">
                    <%= check_box "category", obj.id, class:"checkbox" %><h7><small><%= obj.name %></small></h7>
                    
                    <script type="text/javascript">
                      $(".checkbox").on("click", function(){
                              $('.checkbox').prop('checked', false);  //  全部のチェックを外す
                              $(this).prop('checked', true);  //  押したやつだけチェックつける
                      });
                    </script>
                  </div>
                <% end %>
    　　　　　　</div>　
            </div>
          </br>
          <div class="circle-avatar">
              
              <%= form.label :サムネイル %>　<br/>
              
              <%= image_tag 'no-image.png', id:"avatar_img_prev",class:"hidden" %>
              <br>
                <%= form.file_field :thumbnail, id: 'post_img' %>
              </br>
                <!-- idを追加 -->
          </div>
          <div class="form-group">
            <%= form.label :概要 %><br />
            <%= form.rich_text_area :caption, value: @post.caption %>
          </div>
          <div class="form-group">
            <%= form.label :経緯 %><br />
            <%= form.rich_text_area :circumstance, value: @post.circumstance %>
          </div>
          <div class="form-group">
            <%= form.label :構成 %><br />
            <%= form.rich_text_area :configuration, value: @post.configuration %>
          </div>
          <div class="form-group">
            <%= form.label :編成 %><br />
            <%= form.rich_text_area :organization , value: @post.organization%>
          </div>
          <div class="form-group">
            <%= form.label :コラム %><br />
            <%= form.rich_text_area :column , value: @post.column%>
          </div>
          <div class="form-group">
            <%= form.label :引用 %><br />
            <%= form.rich_text_area :quotation , value: @post.quotation %>
          </div>
          <div class="form-label-group col-md-6 mx-auto text-center">
            <%= form.submit "登録", class: "btn btn-lg btn-primary btn-block text-center" %>
          </div>
      <% end %>
    </div>
  </div>
  <%= javascript_pack_tag 'post' %>
</div>