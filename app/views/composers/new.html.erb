<div class="bg-white">
  <br>
  <div class="container"> 
    <br>
    <br> 
    <h2 class="amatic text-center">ClaCom</h2>

    <div class="profile-wrap">
      <%= form_with model: @composer, local:true do |form| %>
        　<div class="form-group">
            <%= form.label :作曲家 %>　<br />
            <%= form.text_field :name, class: "form-control"  %>
          </div>
          <div class="circle-avatar text-center">
              <%= form.label :プロフィール画像 %>　<br/>
              
              <%= image_tag 'no-image.png', id:"avatar_img_prev",class:"hidden" %>
              <br>
                <%= form.file_field :profile_photo, id: 'post_img' %>
              </br>
                
          </div>
          <div class="form-group">
            <%= form.label :プロフィール %><br />
            
            <%= form.rich_text_area :information %>
          </div>
          <div class="form-label-group col-md-6 mx-auto text-center">
            <%= form.submit "登録", class: "btn btn-lg btn-primary btn-block text-center" %>
          </div>
      <% end %>
    </div>

    <%= javascript_pack_tag 'post' %>
  </div>
  <br>
</div>